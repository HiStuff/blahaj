model TicketQuestion {
  id        Int @id @default(autoincrement())
  themeId   String
  question  String
  style     Int
  minLength Int?
  maxLength Int?
}

model TicketTheme {
  id                  String  @id @default(uuid())
  selectionOptionName String?
  selectionOptionIcon String?
  channelName         String
  guildId             String
  ticketIntro         String  @db.VarChar(3000)
}

model User {
  id                        String  @id
  balance                   Int     @default(50)
  developer                 Boolean @default(false)
  blacklisted               Boolean @default(false)
  customSystemPromptAllowed Boolean @default(false)
}

model Warn {
  id        Int      @id @default(autoincrement())
  authorId  String
  userId    String
  reason    String
  timestamp DateTime @default(now())
}

model Guild {
  id               String  @id
  blacklisted      Boolean @default(false)
  ticketCategoryId String?
  penaltyChannelId String?
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}
